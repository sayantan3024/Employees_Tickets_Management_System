<p id="notice"><%= notice %></p>

<h1>Welcome Employees Tickets Management System</h1>
<hr>
<h2>Employee Lists</h2>

<table border="4">
  <thead>
    <tr>
      <th>Employee Id</th>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phonenumber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.name %></td>
        <td><%= employee.address %></td>
        <td><%= employee.email %></td>
        <td><%= employee.phonenumber %></td>
        <td><%= link_to 'Show Tickets', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employee_path %> |
<%= link_to 'New Ticket', new_ticket_path %> |
<%= link_to 'View All Tickets', tickets_path %>
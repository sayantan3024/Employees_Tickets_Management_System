<p id="notice"><%= notice %></p>

<h1>Welcome Employees Tickets Management System</h1>
<hr>
<h2>Ticket Lists</h2>

<table border="4">
  <thead>
    <tr>
      <th>Ticket Id</th>
      <th>Ticket type</th>
      <th>Description</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.id %></td>
        <td><%= ticket.ticket_type %></td>
        <td><%= ticket.description %></td>
        <td><%= ticket.employee_id %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %> | 
